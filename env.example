# ===================================================
# Trigonal Stack - Environment Variables
# ===================================================
# Copy this file to .env and fill in your values
# ===================================================

# Database Configuration
POSTGRES_USER=trigonal
POSTGRES_DB=trigonal_db
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://trigonaltechnology.com/api
NEXT_PUBLIC_GRAPHQL_ENDPOINT=https://cms.trigonal.technology/graphql

# SSL Certificate Email
SSL_EMAIL=admin@trigonaltechnology.com

# Backend Configuration
ENVIRONMENT=production

# Optional: External Storage for Backups (rclone)
# RCLONE_REMOTE_NAME=your_remote_name
# RCLONE_BACKUP_PATH=trigonal-backups
